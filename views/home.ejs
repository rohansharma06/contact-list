<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%=title%>
    </title>
    <link rel="stylesheet" href="/css/home.css">
    <script src="https://kit.fontawesome.com/95749693e7.js" crossorigin="anonymous"></script>
</head>
<body>
    <h1 id="contact-heading">
        <i class="fas fa-address-book"></i>
        My Contacts List
    </h1>

    <div id="contactList-container">
        <ul>
            <% for(let i of contact_list) { %>
                <li class="contact">
                    <div class="details">
                        <p> <%= i.name %></p>
                        <p> <%= i.phone %></p>
                    </div>
                    <div class="delete">
                        <!-- <a href="/delete-contact/?phone=<%= i.phone %>"> Query form--> 
                        <!-- <a href="/delete-contact/<%= i.phone %>">  Params form -->
                        <a href="/delete-contact/?id=<%= i._id %>">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>
    

    <form action="/create-contact" method="POST" id="add-contact-form">
        <input type="text" name="name" placeholder="Enter name" required>
        <input type="number" name="phone" placeholder="Enter number" required>
        <button type="submit">Add</button>
    </form>

    <script src="/js/home.js"></script>
</body>
</html>